---
import { IconLink } from "@tabler/icons-preact";
const { url, slug, title, subtitle } = Astro.props;
---

<a href={url} data-title={title} target="_blank">
  <div class="header">
    <div class="cover fadein">
      <img src={`/assets/${slug}-1.jpeg`} alt="1"/>
      <img src={`/assets/${slug}-2.jpeg`} alt="2"/>
    </div>
  </div>
  <div class="info">
    <h3>{title} <IconLink/></h3>
    <div class="sub">{subtitle}</div>
  </div>
</a>

<style>
  a .header {
    @apply overflow-hidden aspect-square bg-gray-200 transition-colors;
  }
  a:hover .header {
    @apply bg-transparent
  }
  a .cover {
    @apply overflow-hidden aspect-square flex flex-row justify-between w-full;
    transform: rotateX(45deg) rotateY(0deg) rotateZ(45deg) scale(1.3);
    transition: transform 300ms ease;
  }
  a:hover .cover {
    @apply flex flex-row justify-between h-full;
    transform: rotateX(0deg) rotateY(0deg) rotateZ(0deg) scale(1);
  }
  a .cover img {
    @apply h-full
  }
  a .info {
    @apply flex flex-col justify-between items-start py-2 gap-1
  }
  a .sub {
    @apply text-zinc-500
  }
  a h3 {
    @apply text-2xl text-black flex gap-2 items-center
  }
</style>